# ========================================
# üîê PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.production and fill in the values
# DO NOT commit .env.production to git!

# ========================================
# APPLICATION
# ========================================
APP_NAME=Financial Advisor AI
APP_ENV=production
APP_DEBUG=false

# ========================================
# DATABASE
# ========================================
# Get this from Railway PostgreSQL service
DATABASE_URL=postgresql+psycopg://user:password@host:port/database
AUTO_CREATE_PGVECTOR_EXTENSION=false  # Create manually in production

# ========================================
# SECURITY
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# Your frontend URL (Vercel)
FRONTEND_URL=https://your-app.vercel.app

# ========================================
# OPENAI API
# ========================================
OPENAI_API_KEY=sk-proj-...
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ========================================
# GOOGLE OAUTH
# ========================================
# Get these from https://console.cloud.google.com
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxx
GOOGLE_REDIRECT_URI=https://your-backend.railway.app/api/auth/google/callback

# ========================================
# HUBSPOT OAUTH
# ========================================
# Get these from https://app.hubspot.com/developers
HUBSPOT_CLIENT_ID=xxxxx
HUBSPOT_CLIENT_SECRET=xxxxx
HUBSPOT_REDIRECT_URI=https://your-backend.railway.app/api/auth/hubspot/callback

# ========================================
# OBSERVABILITY (Optional)
# ========================================
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ========================================
# RATE LIMITING (Optional - requires Redis)
# ========================================
# REDIS_URL=redis://default:password@host:port
