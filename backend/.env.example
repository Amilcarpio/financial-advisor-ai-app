# Application settings
APP_NAME=FastAPI Backend
APP_ENV=development
APP_DEBUG=true

# Database configuration
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/backend
AUTO_CREATE_PGVECTOR_EXTENSION=true
VECTOR_DIMENSION=1536

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# HubSpot OAuth
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here
HUBSPOT_REDIRECT_URI=http://localhost:8000/auth/hubspot/callback

# Application Security
SECRET_KEY=your_secret_key_for_jwt_signing_min_32_chars
FRONTEND_URL=http://localhost:3000

# External APIs
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_CHAT_MODEL=gpt-4o-mini

# Worker Configuration (optional)
WORKER_POLL_INTERVAL=5
WORKER_MAX_CONCURRENT=10
WORKER_LOCK_TIMEOUT=300

# Rate Limiting (optional - requires Redis)
# REDIS_URL=redis://localhost:6379

# Security & Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
