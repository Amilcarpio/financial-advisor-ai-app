# ==============================================================================
# FINANCIAL ADVISOR AI - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
APP_NAME=Financial Advisor AI Backend
APP_ENV=development  # Options: development, staging, production
APP_DEBUG=true       # Set to false in production

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql+psycopg://postgres:YOUR_PASSWORD_HERE@localhost:5432/financial_advisor
AUTO_CREATE_PGVECTOR_EXTENSION=true
VECTOR_DIMENSION=1536

# ------------------------------------------------------------------------------
# Google OAuth (Gmail + Calendar)
# ------------------------------------------------------------------------------
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# ------------------------------------------------------------------------------
# HubSpot OAuth (CRM)
# ------------------------------------------------------------------------------
# Get credentials from: https://developers.hubspot.com/
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here
HUBSPOT_REDIRECT_URI=http://localhost:8000/api/auth/hubspot/callback

# ------------------------------------------------------------------------------
# Application Security
# ------------------------------------------------------------------------------
# CRITICAL: Generate a strong random key for production!
# Command: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_for_jwt_signing_min_32_chars
FRONTEND_URL=http://localhost:5173

# ------------------------------------------------------------------------------
# OpenAI API
# ------------------------------------------------------------------------------
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==============================================================================
# PRODUCTION DEPLOYMENT NOTES
# ==============================================================================
# 1. Use strong, unique passwords for all services
# 2. Enable HTTPS/TLS in production
# 3. Replace file-based OAuth state storage with Redis
# 4. Use managed secret storage (AWS Secrets Manager, HashiCorp Vault)
# 5. See SECURITY.md for complete production checklist
